<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EfectosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Animaciones en Android!"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/txtTituloX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movimiento Horizontal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/cardview_shadow_start_color"
                        app:layout_constraintTop_toBottomOf="@+id/txtTituloX" />

                    <ImageView
                        android:id="@+id/imgAnimX"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/compass"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtTituloX" />

                    <Button
                        android:id="@+id/btnIzquierda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Izquierda"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimX"
                        app:layout_constraintEnd_toStartOf="@+id/btnDerecha"
                        app:layout_constraintTop_toTopOf="@id/imgAnimX" />

                    <Button
                        android:id="@+id/btnDerecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Derecha"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimX"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/imgAnimX" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/txtTituloY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movimiento Vertical"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/cardview_shadow_start_color"
                        app:layout_constraintTop_toBottomOf="@+id/txtTituloY" />

                    <ImageView
                        android:id="@+id/imgAnimY"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/compass"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtTituloY" />

                    <Button
                        android:id="@+id/btnAbajo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Abajo"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimY"
                        app:layout_constraintEnd_toStartOf="@+id/btnArriba"
                        app:layout_constraintTop_toTopOf="@id/imgAnimY" />

                    <Button
                        android:id="@+id/btnArriba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Arriba"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimY"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/imgAnimY" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/txtTituloAlpha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desvanecimiento"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/cardview_shadow_start_color"
                        app:layout_constraintTop_toBottomOf="@+id/txtTituloAlpha" />

                    <ImageView
                        android:id="@+id/imgAnimAlpha"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/compass"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtTituloAlpha" />

                    <Button
                        android:id="@+id/btnMostrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Mostrar"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimAlpha"
                        app:layout_constraintEnd_toStartOf="@+id/btnOcultar"
                        app:layout_constraintTop_toTopOf="@id/imgAnimAlpha" />

                    <Button
                        android:id="@+id/btnOcultar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ocultar"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimAlpha"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/imgAnimAlpha" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/txtTituloRotacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rotación"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/cardview_shadow_start_color"
                        app:layout_constraintTop_toBottomOf="@+id/txtTituloRotacion" />

                    <ImageView
                        android:id="@+id/imgAnimRotacion"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/compass"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtTituloRotacion" />

                    <Button
                        android:id="@+id/btnRotarIzquierda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Izquierda"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimRotacion"
                        app:layout_constraintEnd_toStartOf="@+id/btnRotarDerecha"
                        app:layout_constraintTop_toTopOf="@id/imgAnimRotacion" />

                    <Button
                        android:id="@+id/btnRotarDerecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Derecha"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimRotacion"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/imgAnimRotacion" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/txtTituloCombinado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Combinado"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/cardview_shadow_start_color"
                        app:layout_constraintTop_toBottomOf="@+id/txtTituloCombinado" />

                    <ImageView
                        android:id="@+id/imgAnimCombinado"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/compass"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtTituloCombinado" />

                    <Button
                        android:id="@+id/btnCombinado1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Acción 1"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimCombinado"
                        app:layout_constraintEnd_toStartOf="@+id/btnCombinado2"
                        app:layout_constraintTop_toTopOf="@id/imgAnimCombinado" />

                    <Button
                        android:id="@+id/btnCombinado2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acción 2"
                        app:layout_constraintBottom_toBottomOf="@id/imgAnimCombinado"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/imgAnimCombinado" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>